{
    "name": "Project Jerry",
    "version": "1.0",
    "default_locale": "en",
    "description": "Donation Extension for Granite Kids",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "BackgroundEvents/background.js",
            "Content/jquery.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "Images/apple16.png",
        "48": "Images/apple48.png",
        "128": "Images/apple128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.paypal.com/*",
                "*://www.amazon.com/*"
            ],
            "js": [
                "Content/content.js",
                "Content/jquery.js",
                "Content/materialize.min.js"
            ],
            "css": [
                "CSS/overlay.css",
                "Content/materialize.min.css"
            ]
        }
    ],
    "permissions": [
        "notifications",
        "tabs",
        "storage"        
    ],
    "browser_action": {
        "default_icon": "Images/apple48.png",
        "default_title": "Granite Kids",
        "default_popup": "Views/popup.html"
    },
    "web_accessible_resources": [
        "Views/overlay.html"
    ]
}